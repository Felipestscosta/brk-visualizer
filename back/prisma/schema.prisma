generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                           BigInt              @id @default(autoincrement())
  id_bling                     BigInt              @unique @default(0)
  nome                         String?
  codigo                       String?             @unique
  descricao                    String?
  preco                        Float
  tipo                         String?
  situacao                     String?
  formato                      String?
  largura                      Float?
  altura                       Float?
  profundidade                 Float?
  peso                         Float?
  marca                        String?
  tipo_producao                String?
  tipo_produto                 String?
  url_imagem                   String?
  createdAt                    DateTime            @default(now())
  updatedAt                    DateTime            @updatedAt
  codigo_fornecedor            String
  descricao_complementar       String?
  descricao_produto_fornecedor String?
  estoque_atual                Int?
  estoque_maximo               Int?
  estoque_minimo               Int?
  fornecedor                   String
  gtin                         String?
  ncm                          String?
  preco_custo                  Float
  produto_variacao             String
  colecao                      String?
  variations                   Product_variation[]
}

model Product_variation {
  id                           BigInt   @id @default(autoincrement())
  productId                    BigInt
  nome                         String?
  codigo                       String?  @unique
  descricao                    String?
  preco                        Float
  tipo                         String?
  situacao                     String?
  formato                      String?
  largura                      Float?
  altura                       Float?
  profundidade                 Float?
  peso                         Float?
  marca                        String?
  tipo_producao                String?
  tipo_produto                 String?
  url_imagem                   String?
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt
  codigo_fornecedor            String?
  descricao_complementar       String?
  descricao_produto_fornecedor String?
  estoque_atual                Int?
  estoque_maximo               Int?
  estoque_minimo               Int?
  fornecedor                   String?
  gtin                         String?
  ncm                          String?
  preco_custo                  Float
  produto_variacao             String
  id_bling                     BigInt   @default(0)
  product                      Product  @relation(fields: [productId], references: [id_bling])
}
